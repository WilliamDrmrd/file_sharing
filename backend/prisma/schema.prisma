generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Folder {
  id         String     @id @default(uuid())
  name       String
  createdBy  String
  password   String?
  createdAt  DateTime   @default(now())
  media      Media[]
}

model Media {
  id         String   @id @default(uuid())
  folder     Folder   @relation(fields: [folderId], references: [id], onDelete: Cascade)
  folderId   String
  url        String
  type       MediaType
  uploadedAt DateTime @default(now())
  uploadedBy String
}

model Log {
  id        String   @id @default(uuid())
  action    String
  details   String?
  entityId  String?
  createdAt DateTime @default(now())
  level     LogLevel @default(info)
}

enum MediaType {
  photo
  video
}

enum LogLevel {
  info
  warn
  error
}